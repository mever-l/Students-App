<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/studentsRecyclerViewFragment">

    <fragment
        android:id="@+id/addStudentFragment"
        android:name="com.example.myapplicationw.AddStudentFragment"
        android:label="fragment_add_student"
        tools:layout="@layout/fragment_add_student" />
    <fragment
        android:id="@+id/studentsRecyclerViewFragment"
        android:name="com.example.myapplicationw.StudentsRecyclerViewFragment"
        android:label="fragment_students_recycler_view"
        tools:layout="@layout/fragment_students_recycler_view" >
        <action
            android:id="@+id/action_studentsRecyclerViewFragment_to_addStudentFragment"
            app:destination="@id/addStudentFragment" />
        <action
            android:id="@+id/action_studentsRecyclerViewFragment_to_studentDetailsFragment"
            app:destination="@id/studentDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/studentDetailsFragment"
        android:name="com.example.myapplicationw.StudentDetailsFragment"
        android:label="fragment_student_details"
        tools:layout="@layout/fragment_student_details" >
        <action
            android:id="@+id/action_studentDetailsFragment_to_editStudentFragment"
            app:destination="@id/editStudentFragment" />
    </fragment>
    <fragment
        android:id="@+id/editStudentFragment"
        android:name="com.example.myapplicationw.EditStudentFragment"
        android:label="fragment_edit_student"
        tools:layout="@layout/fragment_edit_student" >
        <action
            android:id="@+id/action_editStudentFragment_to_studentsRecyclerViewFragment"
            app:destination="@id/studentsRecyclerViewFragment" />
    </fragment>
</navigation>